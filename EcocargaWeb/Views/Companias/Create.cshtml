@model Cl.Gob.Energia.Ecocarga.Data.Models.DataCompania

@{
    ViewData["Title"] = "Añadir propietario";
}

<div class="alert alert-primary mt-4">
    <h1>Añadir propietario</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label-requerido"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RutPropietario" class="control-label-requerido"></label>
                <input asp-for="RutPropietario" class="form-control" placeholder="11111111-1"/>
                <span asp-validation-for="RutPropietario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlInImage" class="control-label"></label>
                <input asp-for="UrlInImage" class="form-control" />
                <span asp-validation-for="UrlInImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Archivo" class="control-label"></label>
                <input asp-for="Archivo" type="file" />
                <span asp-validation-for="Archivo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
