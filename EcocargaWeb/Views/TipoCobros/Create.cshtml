@model Cl.Gob.Energia.Ecocarga.Data.Models.DataTipocobro

@{
    ViewData["Title"] = "Añadir precio";
}

<div class="alert alert-primary mt-4">
    <h1>Añadir precio</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CargadorId" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label-requerido"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadCobro" class="control-label-requerido"></label>
                <input asp-for="UnidadCobro" class="form-control" type="text" />
                <span asp-validation-for="UnidadCobro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label-requerido"></label>
                <input asp-for="Precio" class="form-control" type="text"/>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" asp-route-cargadorId="@ViewData["Cargador"]" class="btn btn-outline-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
