@model Cl.Gob.Energia.Ecocarga.Data.Models.DataObservacion

@{
    ViewData["Title"] = "Añadir observación";
}

<div class="alert alert-primary mt-4">
    <h1>Añadir observación</h1>
</div>
    
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ElectrolineraId" />
            <div class="form-group">
                <label asp-for="Mensaje" class="control-label-requerido"></label>
                <input asp-for="Mensaje" class="form-control" />
                <span asp-validation-for="Mensaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectrolineraId" class="control-label"></label>
                <select asp-for="ElectrolineraId" class="form-control" asp-items="ViewBag.ElectrolineraId" disabled></select>
                <span asp-validation-for="ElectrolineraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" asp-route-electrolineraId="@ViewData["Electrolinera"]" class="btn btn-outline-primary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
